}

.cardHover {
    position:relative;
}

.cardHover:after {
    content:'\A';
    position:absolute;
    width:100%; height:100%;
    top:0; left:0;
    background:rgba(255,255,255,0.4);
    opacity:0;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
}
.cardHover:hover:after {
    opacity:1;
}


