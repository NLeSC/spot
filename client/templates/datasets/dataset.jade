ul(style="flex-shrink: 0; flex-grow: 0; flex-basis: 20em" data-hook="dataset")
  li.mdl-list__item.mdl-list__item--three-line.mdl-color
    span.mdl-list__item-primary-content
      .mdl-list__item-fa.fa-file
      span
      a(href="" data-hook="name").mdl-color-text--white
      span(data-hook="description").mdl-list__item-text-body

    span.mdl-list__item-secondary-content
      span.mdl-list__item-secondary-action
        label(data-hook="cblabel" for="").mdl-switch.mdl-js-switch.mdl-js-ripple-effect
          input(data-hook="cb" type="checkbox" id="").mdl-switch__input
          span.mdl-switch__label
      span.mdl-list__item-secondary-action
        div(data-hook="cbspinner").mdl-spinner.mdl-js-spinner.is-active
