div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
    header.mdl-layout__header
        div.mdl-layout__header-row
            span.mdl-layout-title Home
            
            div.mdl-layout-spacer
            
            // Files list
            label(data-hook="filesDialogButton").mdl-button.mdl-button--colored.mdl-color--grey-100 
                | Datasets
            div(data-badge="0" data-hook="filesCount").material-icons.mdl-badge.mdl-badge--overlap

            dialog(data-hook="dialogBox").mdl-dialog
              div.mdl-dialog__content
              
                //label(data-hook="dialogText").mdl-textfield__label  No message
                
                // TODO: check https://github.com/iamisti/mdDataTable
                // File list table
                div
                    table(data-hook="fileDialogTable").mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
                        thead(data-hook="fileDialogThead").mdl-data-table__select
                            tr
                                th.mdl-data-table__cell--non-numeric  File Name
                                    th.mdl-data-table__cell--non-numeric  Status
                                        tr
                                        tbody(data-hook="fileDialogTbody").mdl-data-table__select




              div.mdl-dialog__actions.mdl-dialog__actions--full-width
                button(data-hook="dialogButtonClose").mdl-button  Close

        div.mdl-layout-spacer
    div.mdl-layout__drawer
        span.mdl-layout-title Spot
        nav.mdl-navigation
            a(href="/home").mdl-navigation__link Home
            a(href="/facets").mdl-navigation__link Facets
            a(href="/analyze").mdl-navigation__link Analyze
    main(data-hook="widgets").mdl-layout__content
        
        div.mdl-grid

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.sqlupload
               //  h1.mdl-card__title-text Upload
               div.mdl-card__supporting-text
                 | Add data (PostgreSQL)
               div.mdl-card__actions.mdl-card--border
                 div
                   button(data-hook="sql-connect").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
                     | Connect

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.jsonupload
               //  h1.mdl-card__title-text Upload
               div.mdl-card__supporting-text
                 | Add data (JSON)
               div.mdl-card__actions.mdl-card--border
                 div
                   label(for="jsonuploadBtn" data-hook="json-upload").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect 
                     | Upload
                   input(type="file" data-hook="json-upload-input" id="jsonuploadBtn").fileBtn

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.csvupload
               //  h1.mdl-card__title-text Upload
               div.mdl-card__supporting-text
                 | Add data (CSV)
               div.mdl-card__actions.mdl-card--border
                 div
                   label(for="csvuploadBtn" data-hook="csv-upload").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect 
                     | Upload
                   input(type="file" data-hook="csv-upload-input" id="csvuploadBtn").fileBtn

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.sessiondownload
               //  h1.mdl-card__title-text Download
               div.mdl-card__supporting-text
                 | Download your current session: facets (data description), widgets
               div.mdl-card__actions.mdl-card--border
                 a(data-hook="session-download" download).mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Download

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.sessionupload
               //  h1.mdl-card__title-text Upload
               div.mdl-card__supporting-text
                 | Load a previously saved session
               div.mdl-card__actions.mdl-card--border
                 div
                   label(for="sessionuploadBtn" data-hook="session-upload").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect 
                     | Upload
                   input(type="file" data-hook="session-upload-input" id="sessionuploadBtn").fileBtn

           div.mdl-cell.mdl-cell--4-col
             div.card-wide.mdl-card.mdl-shadow--2dp
               div(style="background-size: contain").mdl-card__title.readthedoc
               //  h1.mdl-card__title-text Read the docs
               div.mdl-card__supporting-text
                 | Read the documentation
               div.mdl-card__actions.mdl-card--border
                 a(href="/spot/doc/spot/0.0.2/index.html" target="_blank").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect User docs
                 a(href="/spot/doc/spot/0.0.2/index.html" target="_blank").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Development (API)


        //- button(id="fab-button").mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored.mdl-button--floating-action
        //-     i.material-icons add

        div(data-hook="fileUploadSnack").mdl-js-snackbar.mdl-snackbar
            div.mdl-snackbar__text
            button.mdl-snackbar__action
