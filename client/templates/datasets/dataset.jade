ul(style="flex-shrink: 0; flex-grow: 0; flex-basis: 20em" data-hook="dataset")
  li.mdl-list__item.mdl-list__item--three-line
    span.mdl-list__item-primary-content
      span.afIcon.mdl-list__item-fa.fa-file
      a(href="" data-hook="name").mdl-color-text--white
      span(data-hook="description").mdl-list__item-text-body

    span.mdl-list__item-secondary-content
      span.mdl-list__item-secondary-action
        label(data-hook="cblabel" for="icon-fav").mdl-icon-toggle.mdl-js-icon-toggle
          input(data-hook="cb" type="checkbox" id="icon-fav").mdl-icon-toggle__input
          i.afIcon.mdl-icon-toggle__label.fa.fa-check-square-o
