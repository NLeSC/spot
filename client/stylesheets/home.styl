.bgspotTrans:after {
  content: "";
  background: url("../../../public/../images/background.jpg")no-repeat center center;
  background-size:100%;
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  background-color:rgba(255,255,255,0.4);
  opacity: 0.8;
  background-size: 100% auto;
}

