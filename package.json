{
  "name": "spot",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jiskattema/spot.git"
  },
  "browser": {
    "mdl": "./node_modules/material-design-lite/dist/material.min.js",
    "jquery": "./node_modules/jquery/jquery.min.js",
    "gridster": "./node_modules/gridster/dist/jquery.gridster.min.js",
    "sigmajs": "./node_modules/sigma/build/sigma.min.js",
    "sigmajs.layout.forceAtlas2": "./node_modules/sigma/build/plugins/sigma.layout.forceAtlas2.min.js",
    "sigmajs.renderers.parallelEdges": "./node_modules/sigma/build/plugins/sigma.renderers.parallelEdges.min.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "gridster": {
      "depends": [
        "jquery"
      ]
    },
    "sigmajs": "sigma",
    "sigmajs.layout.forceAtlas2": {
      "depends": [
        "sigmajs"
      ]
    },
    "sigmajs.renderers.parallelEdges": {
      "depends": [
        "sigmajs"
      ]
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "version": "0.0.4",
  "author": {
    "name": "Jisk Attema",
    "email": "j.attema@esciencecenter.nl"
  },
  "semistandard": {
    "ignore": [
      "/public/app.js",
      "/public/doc"
    ]
  },
  "dependencies": {
    "budo": "^9.2.0",
    "jquery": "^3.1.1",
    "pg": "^6.1.0",
    "sigma": "^1.2.0",
    "sortablejs": "^1.4.2"
  },
  "devDependencies": {
    "@lukekarrys/jade-runtime": "^1.11.1",
    "ampersand-app": "^2.0.0",
    "ampersand-collection": "^2.0.0",
    "ampersand-model": "^8.0.0",
    "ampersand-router": "^4.0.0",
    "ampersand-view": "^10.0.1",
    "ampersand-view-switcher": "^2.1.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "chart.js": "^2.1.6",
    "chroma-js": "^1.1.1",
    "codacy-coverage": "^2.0.0",
    "crossfilter2": "git://github.com/crossfilter/crossfilter.git",
    "csv": "^1.1.0",
    "domready": "^1.0.8",
    "favicon-setter": "^0.1.1",
    "font-awesome": "^4.6.3",
    "gridster": "^0.5.6",
    "istanbul": "^0.4.3",
    "jade": "^1.11.0",
    "jasmine": "^2.4.1",
    "jsdoc": "^3.4.0",
    "local-links": "^1.4.0",
    "material-design-icons": "^3.0.1",
    "material-design-lite": "^1.1.3",
    "minami": "^1.1.1",
    "moment": "^2.13.0",
    "moment-timezone": "^0.5.4",
    "plotly.js": "1.17.2",
    "semistandard": "^9.0.0",
    "socket.io": "^1.4.6",
    "socket.io-client": "^1.4.6",
    "squel": "^5.3.2",
    "stylus": "^0.54.5",
    "templatizer": "^2.0.3",
    "uglify-js": "^2.6.2"
  },
  "readmeFilename": "README.md",
  "scripts": {
    "templates": "templatizer -d client/templates -o client/templates.js",
    "css": "stylus -o public --include-css client/stylesheets/app.styl",
    "css-watch": "stylus -w -o public --include-css client/stylesheets/app.styl",
    "uglify": "browserify client/app.js  | uglifyjs --no-source-map --screw-ie8 > public/app.js",
    "dist": "npm run templates && npm run css && npm run uglify",
    "server": "node server/spot-server.js",
    "gh-pages": "npm run dist && git subtree push --prefix public origin gh-pages",
    "check": "semistandard && jasmine",
    "doc": "jsdoc -c .jsdoc.json -d public/doc --package package.json --readme README.md framework/ framework/aggregate framework/dataset framework/facet framework/filter framework/partition framework/util",
    "coverage": "istanbul cover jasmine ; codacy-coverage < coverage/lcov.info",
    "test": "npm run templates ; npm run check ; npm run coverage",
    "fonts": "mkdir -p public/fonts && cp node_modules/material-design-icons/iconfont/* public/fonts",
    "start": "npm run fonts && npm run templates && npm run css-watch & budo -v -P --live --dir public --css app.css client/app.js -- -v"
  }
}
