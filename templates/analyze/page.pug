div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
  main(style='background-color: white;').mdl-layout__content
    header.demo-header.mdl-layout__header.spot-color-top-bar.mdl-color-text--grey-600

      div.mdl-layout__header-row
        span.mdl-layout-title.unselectable Analyze

        div.mdl-layout-spacer

        span(data-hook="data-string").unselectable

        div.mdl-layout-spacer

        span(data-position="bottom" data-step="0" data-hint="")

        button(id="saveSessionButton" data-hintPosition="bottom" data-position="bottom"  data-hint="This buttons saves the current session.").mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
          i.material-icons save
        div(for="saveSessionButton").mdl-tooltip.mdl-tooltip--large
          | Save the session

        button(id="resetFiltersButton" data-position="bottom" data-step="1" data-hint="This button clears all existing filters.").mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
          i.material-icons clear_all
        div(for="resetFiltersButton").mdl-tooltip.mdl-tooltip--large
          | Clear all filters of all plots

        button(id="viewAll" data-position="bottom" data-step="2" data-hint="This button closes all configuration windows").mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
          i.material-icons crop_original
        div(for="viewAll").mdl-tooltip.mdl-tooltip--large
          | Close all configuration windows

        button(id="fullscreenButton" data-position="bottom" data-step="3" data-hint="This button hides facet and chart bars.").mdl-button.mdl-js-button.mdl-button--icon.mdl-js-ripple-effect
          i.material-icons fullscreen
        div(for="fullscreenButton").mdl-tooltip.mdl-tooltip--large
          | Show or hide chart and facet bars

      div(data-hook="chart-bar" data-position="bottom" data-step="4" data-hint="These are the available chart types. If you want to add a chart, just <b>click</b> on its icon and it will be created! Simple, right? ").chartBar.spot-color-top-bar.mdl-color-text--grey-600
        span.chartBarText Click on a chart icon to start a new plot

        div(data-hook="horizontalbarchart" id="horizontalbarchart" data-position="bottom" data-step="5" data-hint="This adds a horizontal bar chart(histogram). This is good for categorical facets.").mdl-cell.mdl-cell--12-col.horizontalbarchartIcon.widgetIcon
        div(for="horizontalbarchart").mdl-tooltip.mdl-tooltip--large
          | Click to add a horizontal bar chart

        div(data-hook="barchart" id="barchart" data-position="bottom" data-step="6" data-hint="This adds a vertical bar chart.").mdl-cell.mdl-cell--12-col.barchartIcon.widgetIcon
        div(for="barchart").mdl-tooltip.mdl-tooltip--large
          | Click to add a bar chart

        div(data-hook="linechart" id="linechart" data-position="bottom" data-step="7" data-hint="This adds a line chart.").mdl-cell.mdl-cell--12-col.linechartIcon.widgetIcon
        div(for="linechart").mdl-tooltip.mdl-tooltip--large
          | Click to add a line chart

        div(data-hook="piechart" id="piechart"  data-position="bottom" data-step="8" data-hint="This adds a pie chart.").mdl-cell.mdl-cell--12-col.piechartIcon.widgetIcon
        div(for="piechart").mdl-tooltip.mdl-tooltip--large
          | Click to add a pie chart

        div(data-hook="bubbleplot" id="bubbleplot" data-position="bottom" data-step="9" data-hint="This adds a buble chart.").mdl-cell.mdl-cell--12-col.bubbleplotIcon.widgetIcon
        div(for="bubbleplot").mdl-tooltip.mdl-tooltip--large
          | Click to add a bubbleplot chart

        div(data-hook="scatterchart" id="scatterchart" data-position="bottom" data-step="10" data-hint="This adds a 3D scatter chart.").mdl-cell.mdl-cell--12-col.scatterchartIcon.widgetIcon
        div(for="scatterchart").mdl-tooltip.mdl-tooltip--large
          | Click to add a 3d scatter chart

        div(data-hook="radarchart" id="radarchart" data-position="bottom" data-step="11" data-hint="This adds a radar chart.").mdl-cell.mdl-cell--12-col.radarchartIcon.widgetIcon
        div(for="radarchart").mdl-tooltip.mdl-tooltip--large
          | Click to add a radar chart

        div(data-hook="networkchart" id="networkchart" data-position="bottom" data-step="12" data-hint="This adds a network chart.").mdl-cell.mdl-cell--12-col.networkchartIcon.widgetIcon
        div(for="networkchart").mdl-tooltip.mdl-tooltip--large
          | Click to add a network chart

      div(data-hook="facet-bar" id="facet-bar" data-position="bottom" data-step="13" data-hint="This is where you will have your variables(facets). Just <b>drag and drop</b> these facets to field of the charts to visualize.").facetBar.spot-color-top-bar
        span.facetBarText Drop variable on a chart, or click to edit
        div(data-hook="facet-bar-items" id="facetBar").facetBarItems
      div(id="facet-bar-tooltip" for="facet-bar").mdl-tooltip.mdl-tooltip--large
        | Drop variable on a chart, or click to edit

    div(id="widgets" data-hook="widgets").widgetDropZone
